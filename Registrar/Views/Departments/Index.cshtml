@{
  Layout = "_Layout";
}

<h1>Department</h1>

@using Registrar.Models

@if (Model.Count == 0)
{
  <p>No Departments have been added</p>
}
<ul>
  @foreach (Department department in Model)
  {
    <li class="enlarge">@Html.ActionLink($"{department.Name}", "Details", new { id = department.DepartmentId})</li>
  }
</ul>

<p class="enlarge">@Html.ActionLink("Add new department", "Create")</p>
<p class="enlarge">@Html.ActionLink("Home", "Index", "Home")</p>