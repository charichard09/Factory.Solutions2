@{
  Layout = "_Layout";
}

@using Registrar.Models;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added</h3>
}

<ul>
  @foreach (Course course in Model)
  {
    <li class="enlarge">@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId})</li>
  }
</ul>

<p class="enlarge">@Html.ActionLink("Add new course", "Create")</p>
<p class="enlarge">@Html.ActionLink("Add new student","Create", "Students")</p>
<p class="enlarge">@Html.ActionLink("Home","Index", "Home")</p>