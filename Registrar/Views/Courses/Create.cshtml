@{
  Layout = "_Layout";
}

@model Registrar.Models.Course
@using Registrar.Models


<h1>Create Course</h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</p>
  @Html.LabelFor(model => model.Department)
  @Html.DropDownList("DepartmentId")
  <p>@Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })</p>    

  <input type="submit" value="Add new course"/>
}

<p class="enlarge">@Html.ActionLink("Show all courses", "Index")</p>