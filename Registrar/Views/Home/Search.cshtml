@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Student>

<ul>
@if (Model.Count != 0)
  {
    <h2>Students</h2>
    @foreach (Student student in Model)
    {
      <li>@Html.ActionLink($"{student.Name}", "Details", "Students", new { id = student.StudentId})</li>
    }
  }
  else
  {
    <h2>No Students Found</h2>
  }
</ul>