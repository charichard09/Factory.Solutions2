@{
  Layout = "_Layout";
}

@using Registrar.Models;

<h1>Students</h1>
@if (@Model.Count == 0) //if list of students is 0
{
  <h3>No students have been added yet</h3>
}
else
{
  <ul>
    @* add | @Student.Department.Name *@
    @foreach(Student student in Model)
    {
      <li>
        @Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId }) 
      </li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new student", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>